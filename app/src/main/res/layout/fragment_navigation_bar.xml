<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <view
        class="chao.widget.sample.TabFragment$FixedViewPager"
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <chao.widget.tablayout.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        app:tabPaddingTop="6dp"
        app:tabPaddingBottom="6dp"
        app:tabIndicatorHeight="0dp"
        app:tabTextColor="@color/grey_727171"
        app:tabSelectedTextColor="@color/green_52ba91"
        app:tabTextSize="10sp"
        app:tabBackground="@null"/>

</LinearLayout>